#ifndef _STDLIB_UTILITY_
#define _STDLIB_UTILITY_

#include <type_traits>

namespace std
{

template<class T>
constexpr typename remove_reference<T>::type&& move(T&& t) noexcept
{
    return static_cast<typename remove_reference<T>::type&&>(t);
}


template<class T>
void swap(T& a,T&b)
{
    T tmp=move(a);
    a=move(b);
    b=move(tmp);
}

}

#endif
