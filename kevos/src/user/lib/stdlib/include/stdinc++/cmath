#ifndef _CMATH_
#define _CMATH_

namespace std 
{

template<class T>
double sin(T x)
{
    register double ret;
    __asm__(
        "fsin"
        : "=t"(ret)
        : "0"(static_cast<double>(x))
    );
    return ret;
}

template<class T>
double cos(T x)
{
    register double ret;
    __asm__(
        "fcos"
        : "=t"(ret)
        : "0"(static_cast<double>(x))
    );
    return ret;
}

}

#endif
